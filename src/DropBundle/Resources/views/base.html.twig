<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>Best Drop Company</title>


    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

    <!-- All styles -->
    <link type="text/css" rel="stylesheet" href="{{ asset('build/app.css') }}"/>

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">


    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    {% block over_styles %}
    {% endblock over_styles %}
</head>
<body>
<!-- HEADER -->
<header>
    <!-- TOP HEADER -->
    <div id="top-header">
        <div class="container">
            <ul class="header-links pull-left">
                <li><a href="#"><i class="fa fa-phone"></i> +021-95-51-84</a></li>
                <li><a href="#"><i class="fa fa-envelope"></i> <span class="__cf_email__" data-cfemail="ff9a929e9693bf9a929e9693d19c9092">best-drop.company@gmail.com</span></a></li>
                <li><a href="#"><i class="fa fa-map-marker"></i> 1734 Stonecoal Road</a></li>
                <li><a href="{{ path('patron') }}"><i class="fas fa-user-shield"></i>Admin</a></li>
            </ul>
            {% if is_granted('ROLE_USER') %}
                <ul class="header-links pull-right">
                    <li><a href="#"><i class="fa fa-dollar-sign"></i> UAH</a></li>
                    <li><a href="{{ path('user_view.personal_data') }}"><i class="fa fa-user"></i> {{ app.user.name }}</a></li>
                    <li><a href="{{ path('security_logout') }}"><i class="fas fa-sign-out-alt"></i> Выйти</a></li>
                </ul>
            {% else %}
                <ul class="header-links pull-right">
                    <li><a href="{{ path('security_login') }}"><i class="fas fa-sign-in-alt"></i> Вход</a></li>
                </ul>
            {% endif %}
        </div>
    </div>
    <!-- /TOP HEADER -->

    <!-- MAIN HEADER -->
    <div id="header">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <div class="col-md-9">
                    <div class="header-logo">
                        <a href="{{ path('guest.home') }}" class="logo">
                            <img src="{{ asset('build/images/project-images/Best-Quality-PNG-Picture.png') }}">
                            <span>Best-Drop.Company</span>
                        </a>
                    </div>
                </div>
                <!-- ACCOUNT -->
                <div class="col-md-3 clearfix">
                    <div class="header-ctn">
                        <!-- Menu Toogle -->
                        <div class="menu-toggle">
                            <a href="#">
                                <i class="fa fa-bars"></i>
                                <span>Menu</span>
                            </a>
                        </div>
                        <!-- /Menu Toogle -->
                    </div>
                </div>
                <!-- /ACCOUNT -->
            </div>

        </div>
        <!-- container -->
    </div>
    <!-- /MAIN HEADER -->
</header>
<!-- /HEADER -->

<!-- NAVIGATION -->
<nav id="navigation">
    <!-- container -->
    <div class="container">
        <!-- responsive-nav -->
        <div id="responsive-nav">
            <!-- NAV -->
            {% if is_granted('ROLE_USER') %}
                {{ knp_menu_render('DropBundle:Builder:mainMenu', { 'currentClass': 'active'} )}}
            {% else %}
                {{ knp_menu_render('DropBundle:Builder:mainGuestMenu', { 'currentClass': 'active'} )}}
            {% endif %}
            <!-- /NAV -->
        </div>
        <!-- /responsive-nav -->
    </div>
    <!-- /container -->
</nav>
<!-- /NAVIGATION -->

<!-- MAIN CONTENT -->
{% block main_content %} {% endblock main_content %}
<!-- /MAIN CONTENT -->

<!-- FOOTER -->
<footer id="footer">


    <!-- bottom footer -->
    <div id="bottom-footer" class="section">
        <div class="container">
            <!-- row -->
            <div class="row">
                <div class="col-md-12 text-center">
                    <ul class="footer-payments">
                        <li><a href="#"><i class="fab fa-cc-visa"></i></a></li>
                        <li><a href="#"><i class="fa fa-credit-card"></i></a></li>
                        <li><a href="#"><i class="fab fa-cc-paypal"></i></a></li>
                        <li><a href="#"><i class="fab fa-cc-mastercard"></i></a></li>
                        <li><a href="#"><i class="fab fa-cc-discover"></i></a></li>
                        <li><a href="#"><i class="fab fa-cc-amex"></i></a></li>
                    </ul>
                    <span class="copyright">
                         &copy; Best-Drop.Company - Ваша Финансовая Свобода  <script>document.write(new Date().getFullYear());</script>
                    </span>
                </div>
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /bottom footer -->
</footer>
<!-- /FOOTER -->

<!-- jQuery Plugins -->
{% block specially_script %}{% endblock specially_script %}

<script src="{{ asset('build/app.js') }}"></script>
</body>
</html>
