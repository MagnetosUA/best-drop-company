{% extends '@Drop/base.html.twig' %}
{% block over_styles %}
{% endblock over_styles %}
{% block main_content %}
    <div class="container">
        <h2>Мои рефералы</h2>

        <table class="table">
            <thead>
            <tr>
                <th>Имя</th>
                <th>Почта</th>
                <th>Доход</th>
            </tr>
            </thead>
            <tbody>
            {% for referral in referrals %}
                <tr class="success">
                    <td>{{ referral.name }}</td>
                    <td>{{ referral.email }}</td>
                    <td>0</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock main_content %}
