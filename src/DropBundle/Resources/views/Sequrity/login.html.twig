{% extends '@Drop/base.html.twig' %}
{% block over_styles %}
    <link href="{{ asset('assets/css/login.css') }}" rel="stylesheet" />
{% endblock over_styles %}

{% block main_content %}
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4 auth">
            <p>Авторизация</p>
            {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
                {{ form_row(form._username) }}
                {{ form_row(form._password) }}
                <button type="submit" class="btn btn-success">Вход <span class="fa fa-lock"></span></button>
                &nbsp;
                <a href="{{ path('user_register') }}">Регистрация</a>
            {{ form_end(form) }}
        </div>
        <div class="col-md-4"></div>
    </div>
    <script>
    </script>
{% endblock main_content %}